        Title="WPF Workflow Host" Height="308" Width="517" Closing="Window_Closing">
    <Grid>
        <Button Content="Start Workflow" Height="23" HorizontalAlignment="Left" Margin="28,12,0,0" Name="button1" VerticalAlignment="Top" Width="101" Click="button1_Click" />
        <DataGrid Height="217" Margin="12,41,12,0" Name="dataGrid1" VerticalAlignment="Top" DataContext="{Binding}" IsReadOnly="True" />
        <Button Content="Clear" Height="23" HorizontalAlignment="Left" Margin="170,12,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
    </Grid>
